<h2>Edit Category</h2>

<%= form_for @category do |f| %>
	<!-- check for errors -->
	<% if@category.errors.any? %>
		<% @category.errors.full_messages.each do |msg| %>
			<!-- show errors -->
			<div class="alert alert-denger"><%= msg %></div>
		<% end %>
	<% end %>	

	<div class="form_group">
		<%= f.label :name %>
		<%= f.text_field :name, class:'form-control' %>
	</div>
	<br>
	<%= f.submit "Submit", class:'btn btn-primery' %>
	<%= link_to "Cancel", categories_path, class:'btn btn-default' %>
	<% end %> 

	<h3 class="page-header">Images in <%= @category.name %></h3>
	<div id="edit_images">
		<% if @images.exists? %>
			<% @images.each_slice(6) do |image| %>
				<div class="row">
					<% image.each do |image| %>
						<div class="col-md-2">
							<%= image_tag image.image_url(:thumb) %>
							<center><%= link_to "Delete", image_path(image), class:'delete',method: :delete, data: {confirm: 'Are you sure?'} %></center> 
						</div>	
					<% end %>	
				</div>
			<% end %>
		<% end %>
	</div>